{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6","dom"],
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
